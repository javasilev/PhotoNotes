<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/minor"
	app:cardCornerRadius="@dimen/tiny">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingBottom="@dimen/minor"
		android:paddingLeft="@dimen/modest"
		android:paddingRight="@dimen/modest"
		android:paddingTop="@dimen/minor">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/minor"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/item_note_card_text_view_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/minor"
				android:layout_weight="1"
				android:textColor="@android:color/black"
				android:textSize="16sp"
				tools:ignore="RtlHardcoded"
				tools:text="Note_name_15416511" />

			<TextView
				android:id="@+id/item_note_card_text_view_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:textSize="12sp"
				tools:text="21.01.2016" />
		</LinearLayout>

		<TextView
			android:id="@+id/item_note_card_text_view_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:lines="4"
			android:textSize="12sp"
			android:textStyle="italic"
			tools:text="List of languages to use for TEXT_DETECTION. In most cases, an empty value yields the best results since it enables automatic language detection." />
	</LinearLayout>
</android.support.v7.widget.CardView>
