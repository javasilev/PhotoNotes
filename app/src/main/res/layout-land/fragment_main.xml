<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/rich"
	android:orientation="horizontal">

	<ImageButton
		android:id="@+id/fragment_main_button_camera"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_marginRight="@dimen/modest"
		android:layout_weight="1"
		android:background="@android:color/transparent"
		android:scaleType="centerInside"
		android:src="@drawable/background_camera_button"
		android:text="@string/camera"
		tools:ignore="RtlHardcoded" />

	<ImageButton
		android:id="@+id/fragment_main_button_gallery"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="@android:color/transparent"
		android:scaleType="centerInside"
		android:src="@drawable/background_gallery_button"
		android:text="@string/gallery" />
</LinearLayout>